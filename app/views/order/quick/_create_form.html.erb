<div class="magnific-container">
  <div class="magnific-title">
    Код подтверждения
  </div>
  <%= form_for @order_quick, remote: true, validate: true, html: { class: 'magnific-form' } do |f| %>
    <%= f.hidden_field :type_name %>
    <%= f.hidden_field :type_id %>
    <%= f.hidden_field :phone %>

    <label class="magnific-label" for="contact_form_contacts">Код*:</label>
    <%= f.text_field :code_confirm, class: 'magnific-input nomarg'%>

    <%= link_to 'Отправить код повторно', order_quick_index_path(phone: f.object.phone, type_name: f.object.type_name, type_id: f.object.type_id),
      method: 'POST', class: 'content-link content-link--onpage content-link--small', remote: true %>

    <p class='form-notice'>Введите код, который вы получили в СМС.</p>

    <% @order_quick.errors.each do |_k, v| %>
      <p class='form-notice error-color'><%= v %></p>
    <% end %>

    <input class="magnific-submit" type="submit" value="Отправить заказ" />
  <% end %>
</div>
