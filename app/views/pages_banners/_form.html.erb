<%= form_for(@pages_banner, html:{ class:"form-add js__template-system" }, validate: true) do |f| %>
  <%= render "form_errors", object: f.object %>

  <%= f.hidden_field :root_type %>
  <%= f.hidden_field :root_id %>

  <div class="c-6 padd-lr">
    <div class="f-a-left">
      <%= f.label :banner_id, class:"f-a-label" %>
      <%= f.collection_select :banner_id, Banner.not_deleted, :id, :content_name, {}, class:"f-a-input" %>
    </div>
  </div>

  <div class="c-6">
    <div class="f-a-left">
      <%= f.label :datetime_start, class: 'f-a-label' %>
      <%= f.text_field :datetime_start, class: 'f-a-input' %>

      <%= f.label :datetime_stop, class: 'f-a-label' %>
      <%= f.text_field :datetime_stop, class: 'f-a-input' %>
    </div>
  </div>


  <div class="clearfloat"></div>
  <div class="c-6">
    <%= render "danger_block", f: f %>
  </div>

  <div class="clearfloat"></div>
<% end %>
